{
  "name": "@ui-modules/utils",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "README.md"
  ],
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint .",
    "format": "biome format . ",
    "format:lint": "biome check .",
    "clean": "rm -rf node_modules",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns-tz": "^3.1.3",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "autoprefixer": "^10.4.20",
    "vitest": "^2.1.1",
    "@storybook/react": "^8.2.9",
    "@ui-modules/typescript-config": "workspace:*",
    "@ui-modules/biome-config": "workspace:*",
    "@turbo/gen": "^1.12.4",
    "@types/node": "^22.5.5",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "typescript": "^5.6.2",
    "tsup": "^8.2.4"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  }
}
