{
  "name": "@ui-modules/themes",
  "version": "0.0.1",
  "private": true,
  "sideEffects": ["*.css"],
  "exports": {
    "./styles/*": "./dist/styles/*",
    "./tokens.css": "./dist/tokens/all.css",
    "./dark.css": "./dist/themes/dark/dark.css",
    "./light.css": "./dist/themes/light/light.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist", "tsconfig.json", "package.json"],
  "scripts": {
    "build": "tsup",
    "check:types": "tsc --noEmit",
    "check:types:source": "tsc --noEmit --project tsconfig.source.json",
    "clean": "rm -rf node_modules dist",
    "dev": "tsup --watch",
    "format": "biome format .",
    "format:lint": "biome check .",
    "lint": "biome lint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@storybook/blocks": "^8.3.4",
    "@storybook/react": "^8.3.4",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.7.4",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@ui-modules/biome-config": "workspace:*",
    "@ui-modules/typescript-config": "workspace:*",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "postcss-import": "^16.1.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "jsdom": "^25.0.1",
    "vitest": "^2.1.1"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "styles": "./dist/styles"
}
