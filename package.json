{
  "name": "ui-modules",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "clean": "pnpm run clean:workspaces && rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "prerelease": "turbo run build --filter=docs^...",
    "release": "changeset publish",
    "format:prettier:example": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format": "turbo format --",
    "format:fix": "turbo format -- --write",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --write",
    "typecheck": "turbo typecheck",
    "type-coverage": "type-coverage --detail",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "type-coverage": "^2.29.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cli": "^19.4.0",
    "@changesets/cli": "^2.27.7",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": ["pnpm run lint:fix --", "pnpm run format:fix --"],
    "*.css": ["pnpm run format:fix --"],
    "*.json": ["pnpm run format:fix --"]
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
